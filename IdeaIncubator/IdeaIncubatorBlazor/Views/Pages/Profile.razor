@page "/profile"

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
    <MudTabs
        Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
        <MudTabPanel Text="My Ideas">
            <MudGrid>
                <MudItem xs="4">
                    <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
                        <MudList Clickable="true">
                            <MudText Typo="Typo.h6" Color="Color.Secondary">FAVOURITES</MudText>
                            @if (wishList != null)
                            {
                                foreach (Idea _idea in wishList)
                                {
                                    <MudListItem Text="@_idea.Name" Class="MudListItem-customstyle" OnClick="()=> ShowIdeaDetail(_idea)"  />
                                }
                            }                            
                        </MudList>
                    </MudPaper>
                </MudItem>
                <MudItem xs="4">
                    <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
                        <MudList Clickable="true">
                            <MudText Typo="Typo.h6" Color="Color.Secondary">PROVIDING</MudText>
                            @if (ownIdeas != null)
                            {
                                foreach (Idea _idea in ownIdeas)
                                {
                                    <MudListItem Text="@_idea.Name" Class="MudListItem-customstyle" OnClick="()=> ShowIdeaDetail(_idea)" />
                                }
                            }                            
                        </MudList>
                    </MudPaper>
                </MudItem>
                <MudItem xs="4">
                    <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
                        <MudList Clickable="true">
                            <MudText Typo="Typo.h6" Color="Color.Secondary">COLLABORATING</MudText>
                            @if (collIdeas != null)
                            {
                                foreach (Idea _idea in collIdeas)
                                {
                                    <MudListItem Text="@_idea.Name" Class="MudListItem-customstyle" OnClick="()=> ShowIdeaDetail(_idea)" />
                                }
                            }                            
                        </MudList>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudTabPanel>
        <MudTabPanel Text="My Profile">
            <MyAccount User="User" ></MyAccount>
        </MudTabPanel>
    </MudTabs>
</MudContainer>